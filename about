  <script>
    // Copy authentication functionality from homepage
    (function() {
      'use strict';

      // DOM Elements
      const modal = document.getElementById('auth-modal');
      const closeBtn = document.querySelector('.close');
      const authLink = document.getElementById('auth-link');
      const loginForm = document.getElementById('login-form');
      const registerForm = document.getElementById('register-form');
      const loginMessage = document.getElementById('login-message');
      const registerMessage = document.getElementById('register-message');

      // Update navigation based on login state
      function updateNavigation() {
        if (authLink) {
          const userEmail = localStorage.getItem('userEmail');
          authLink.textContent = userEmail ? 'My Account' : 'Login / Register';
        }
      }

      // Initialize
      updateNavigation();

      // Auth link click
      if (authLink) {
        authLink.addEventListener('click', function(e) {
          e.preventDefault();
          if (localStorage.getItem('userEmail')) {
            // User is logged in - redirect to homepage account sidebar
            window.location.href = 'HOMEPAGE.html';
          } else {
            // User not logged in - redirect to homepage login
            window.location.href = 'HOMEPAGE.html';
          }
        });
      }
    })();
  </script>
